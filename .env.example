# Common settings
ENV_NAME=development
LOG_LEVEL=info


# AI Engine Configuration
AI_ENGINE_URL=http://localhost:8001
AI_MODEL_NAME=
AI_MODEL_CACHE_DIR=./backend/ai_engine/model_cache
AI_DEVICE=cpu
AI_LOG_LEVEL=INFO
AI_ENVIRONMENT=development
AI_DEBUG=true

# AI Processing Thresholds
AI_LOW_STOCK_THRESHOLD=0.25
AI_MEDIUM_STOCK_THRESHOLD=0.60
AI_HIGH_STOCK_THRESHOLD=0.85

# Performance Settings
AI_MAX_IMAGE_SIZE=1024
AI_MIN_IMAGE_SIZE=224
AI_BATCH_SIZE=1

# API Timeouts and Limits
AI_REQUEST_TIMEOUT=60
AI_MAX_FILE_SIZE_MB=10
AI_MAX_BATCH_SIZE=10


# Image Processing Configuration
MAX_IMAGE_PROCESSING_TIME=10
IMAGE_BATCH_SIZE=4
DEBUG_MODE=false
PROCESSING_OUTPUT_DIR=/tmp/image_processing

# Performance Settings
ENABLE_GPU_ACCELERATION=false
MAX_CONCURRENT_PROCESSING=2
MEMORY_LIMIT_MB=2048

# Quality Settings
DEFAULT_IMAGE_QUALITY=95
ENABLE_INTERMEDIATE_SAVING=false